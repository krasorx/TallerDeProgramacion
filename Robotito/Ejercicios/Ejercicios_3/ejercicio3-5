programa Ejercicio3-5
procesos
  proceso JuntarFlores
  comenzar
    mientras (HayFlorEnLaEsquina)
      tomarFlor
  fin 
  proceso Recorrido
  comenzar
    repetir 20
      repetir 20
        JuntarFlores
        mover
      JuntarFlores
      derecha
      mover
      derecha
      repetir 20
        JuntarFlores
        mover
      JuntarFlores
      repetir 3 
        derecha
      mover

  fin
areas
  area1 : AreaPC(10,5,30,30)
  area2 : AreaP(35,35,55,55)
  area3 : AreaC(10,10,10,10)
robots 
  robot tipo1
  comenzar
    Recorrido
    BloquearEsquina(10,10)
    Pos (10,10)
    mientras(HayFlorEnLaBolsa)
      depositarFlor
    Pos(10,5)
    LiberarEsquina(10,10)
  fin

variables 
  robot1: tipo1
  robot2: tipo1
  
comenzar 
  AsignarArea(robot1,area1)
  AsignarArea(robot2,area2)
  AsignarArea(robot2,area3)

  Iniciar(robot1, 10, 5)
  Iniciar(robot2, 35, 35) 
fin
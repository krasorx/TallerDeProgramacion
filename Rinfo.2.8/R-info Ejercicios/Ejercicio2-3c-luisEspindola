programa Ejercicio2-3b {un robot recorre un rectangulo de 5x3 y devuelva las f}
                      { 6 robots (2,2) 6,2 10,2 14,2 18,2 22,2}
procesos
  proceso Rectangulo(ES n : numero)
  variables
    num : numero
  comenzar
    repetir 2
      repetir 5
        mientras(HayFlorEnLaEsquina)
          tomarFlor
          num := num + 1
        mientras(HayFlorEnLaBolsa)
          depositarFlor
        mover
      derecha
      repetir 3
        mientras(HayFlorEnLaEsquina)
          tomarFlor
          num := num + 1
        mientras(HayFlorEnLaBolsa)
          depositarFlor
        mover
      derecha
    Informar(num)
  fin 
areas
  areaR1 : AreaP(2,2,5,7)
  areaR2 : AreaP(6,2,9,9)
  areaR3 : AreaP(10,2,13,11)
  areaR4 : AreaP(14,2,17,13)
  areaR5 : AreaP(18,2,21,15)
  areaR6 : AreaP(22,2,25,17)
robots 
  robot tipo1
  variables
    num:numero 
  comenzar
    repetir 2
      repetir 5
        mientras(HayFlorEnLaEsquina)
          tomarFlor
          num := num + 1
        mientras(HayFlorEnLaBolsa)
          depositarFlor
        mover
      derecha
      repetir 3
        mientras(HayFlorEnLaEsquina)
          tomarFlor
          num := num + 1
        mientras(HayFlorEnLaBolsa)
          depositarFlor
        mover
      derecha
    Informar(num)
  fin 
  robot tipo2
  variables
    n : numero
  comenzar
    Rectangulo(n)
  fin
  robot tipo3
  variables
    n : numero
  comenzar
    Rectangulo(n)
  fin
  robot tipo4
  variables
    n : numero
  comenzar
    Rectangulo(n)
  fin
  robot tipo5
  variables
    n : numero
  comenzar
    Rectangulo(n)
  fin
  robot tipo6
  variables
    n : numero
  comenzar
    Rectangulo(n)
  fin
variables 
  robot1: tipo1
  robot2: tipo2
  robot3: tipo3
  robot4: tipo4
  robot5: tipo5
  robot6: tipo6
comenzar 
  AsignarArea(robot1,areaR1)
  AsignarArea(robot2,areaR2)
  AsignarArea(robot3,areaR3)
  AsignarArea(robot4,areaR4)
  AsignarArea(robot5,areaR5)
  AsignarArea(robot6,areaR6)
  Iniciar(robot1, 2, 2)
  Iniciar(robot2 ,6, 2)
  Iniciar(robot3 ,10, 2)
  Iniciar(robot4 ,14, 2)
  Iniciar(robot5 ,18, 2)
  Iniciar(robot6 ,22, 2)
fin
